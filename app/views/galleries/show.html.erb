<% if @error_message %>
  <div class="content-wrapper">
    <div class="text-center py-16">
      <h2 class="text-2xl dynamic-text font-semibold mb-4"><%= @error_message %></h2>
      <%= link_to "← Back to Home", root_path, class: "dynamic-link hover:opacity-75 transition-colors" %>
    </div>
  </div>
<% else %>
  <!-- Render gallery using the appropriate gallery type partial -->
  <%= render @renderer.partial_name, render_data: @render_data %>
<% end %>
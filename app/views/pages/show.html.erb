<% content_for :body_class, 'page-view' %>

<div class="content-wrapper" style="padding-top: 4rem; padding-bottom: 4rem;">
    <!-- Page Header -->
    <div class="page-header text-center mb-8" style="padding-top: var(--header-top-padding);">
      <h1 class="text-3xl dynamic-text font-bold mb-2"><%= @page.title %></h1>
    </div>
    
    <!-- Page Content -->
    <div class="page-content prose prose-lg max-w-none dynamic-text">
      <%= @page.html_content.html_safe %>
    </div>
</div>

<style>
  .page-content {
    line-height: 1.7;
  }
  
  /* Style markdown content */
  .page-content h1,
  .page-content h2, 
  .page-content h3,
  .page-content h4,
  .page-content h5,
  .page-content h6 {
    color: var(--text-color);
    font-weight: var(--font-weight-bold);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .page-content h1 { font-size: 2.5rem; }
  .page-content h2 { font-size: 2rem; }
  .page-content h3 { font-size: 1.5rem; }
  .page-content h4 { font-size: 1.25rem; }
  
  .page-content p {
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }
  
  .page-content a {
    color: var(--link-color);
    text-decoration: underline;
    transition: color 0.2s ease;
  }
  
  .page-content a:hover {
    color: var(--hover-link-color);
  }
  
  .page-content ul,
  .page-content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }
  
  .page-content li {
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }
  
  .page-content blockquote {
    border-left: 4px solid var(--accent-color);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--secondary-text-color);
  }
  
  .page-content code {
    background-color: var(--accent-color);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: var(--text-color);
  }
  
  .page-content pre {
    background-color: var(--accent-color);
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }
  
  .page-content pre code {
    background: none;
    padding: 0;
  }
  
  .page-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    border: 1px solid var(--border-color);
  }
  
  .page-content th,
  .page-content td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
  }
  
  .page-content th {
    background-color: var(--accent-color);
    font-weight: var(--font-weight-bold);
  }
  
  .page-content img {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    border-radius: 0.5rem;
  }
  
  .page-content hr {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: 3rem 0;
  }
  
  /* Task lists (GitHub flavored markdown) */
  .page-content input[type="checkbox"] {
    margin-right: 0.5rem;
  }
  
  .page-content ul.contains-task-list {
    list-style: none;
    padding-left: 0;
  }
  
  .page-content .task-list-item {
    margin-left: 0;
  }
</style>